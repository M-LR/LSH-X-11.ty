<!DOCTYPE html>
<html lang="fr">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ title or site.title }}</title>
    <meta
    name="description" content="{{ description or site.description }}"> <!-- Open Graph pour partage social -->
    <meta property="og:title" content="{{ title or site.title }}">
    <meta property="og:description" content="{{ description or site.description }}">
    <meta
    property="og:type" content="website"> <!-- Favicon -->
    <link rel="apple-touch-icon" sizes="180x180" href="{{ '/assets/images/apple-touch-icon.png' | url }}">
    <link rel="icon" type="image/png" sizes="32x32" href="{{ '/assets/images/favicon-32x32.png' | url }}">
    <link rel="icon" type="image/png" sizes="16x16" href="{{ '/assets/images/favicon-16x16.png' | url }}">
    <link
    rel="manifest" href="{{ '/assets/images/site.webmanifest' | url }}"> <!-- Styles -->
    <link rel="stylesheet" href="{{ '/assets/css/main.css' | url }}">
    <link
    href="https://cdn.jsdelivr.net/npm/remixicon@4.3.0/fonts/remixicon.css" rel="stylesheet">
    <!-- Scripts for theme (inline to avoid FOUC) -->
    <script>
      (function () {
        const savedTheme = localStorage.getItem('theme');
        if (savedTheme) {
          document.documentElement.setAttribute('data-theme', savedTheme);
        } else if (window.matchMedia('(prefers-color-scheme: light)').matches) {
          document.documentElement.setAttribute('data-theme', 'light');
        }
      })();
    </script>
  </head>
  <body>
    <!-- Header avec navigation sticky -->
    <header class="header">
      <div class="nav">
        <a class="logo" href="{{ '/' | url }}">
          <img src={{ site.logo | url }} alt="{{ site.title }}" class="logo-img">
          <span class="logo-text">{{ site.title }}</span>
        </a>
        <button class="mobile-menu-toggle" aria-label="Menu principal">
          <i class="ri-menu-line open-icon"></i>
          <i class="ri-close-line close-icon"></i>
        </button>
        <nav class="main-nav">
          <div class="nav-links">
            {% for item in navigation %}
              <a href="{{ item.url | url }}">{{ item.label }}</a>
            {% endfor %}
          </div>
          <!-- Theme Toggle Button -->
          <button id="theme-toggle" class="theme-toggle" aria-label="Changer de thème">
            <i class="ri-palette-line"></i>
          </button>
        </nav>
      </div>
    </header>
    <main class="site-main">
      {{ content | safe }}
    </main>
    <footer class="site-footer">
      <div class="container">
        <div
          class="footer-content">
          <!-- Colonne 1 : Branding -->
          <div class="footer-col">
            <h3 class="footer-title">{{ site.title }}</h3>
            <p class="footer-tagline">{{ site.description or "Votre description ici" }}</p>
          </div>
          <!-- Colonne 2 : Navigation -->
          <div class="footer-col">
            <h4 class="footer-heading">Navigation</h4>
            <ul class="footer-links">
              {% for item in navigation %}
                <li>
                  <a href="{{ item.url | url }}">{{ item.label }}</a>
                </li>
              {% endfor %}
            </ul>
          </div>
          <!-- Colonne 3 : Réseaux sociaux -->
          <div class="footer-col">
            <h4 class="footer-heading">Suivez-nous</h4>
            <div class="social-links">
              {% if site.social.instagram %}
                <a href="{{ site.social.instagram }}" target="_blank" rel="noopener noreferrer" aria-label="Instagram">
                  <svg width="24" height="24" viewbox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <rect x="2" y="2" width="20" height="20" rx="5" ry="5" stroke="currentColor" stroke-width="2"/>
                    <path
                      d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37Z"
                      stroke="currentColor"
                      stroke-width="2"
                      stroke-linecap="round"
                      stroke-linejoin="round"/>
                    <circle cx="17.5" cy="6.5" r="1.5" fill="currentColor"/>
                  </svg>
                </a>
              {% endif %}
              {% if site.social.youtube %}
                <a href="{{ site.social.youtube }}" target="_blank" rel="noopener noreferrer" aria-label="YouTube">
                  <svg width="24" height="24" viewbox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <path
                      d="M22.54 6.42a2.78 2.78 0 0 0-1.94-2C18.88 4 12 4 12 4s-6.88 0-8.6.46a2.78 2.78 0 0 0-1.94 2A29 29 0 0 0 1 11.75a29 29 0
                        0 0 .46 5.33A2.78 2.78 0 0 0 3.4 19c1.72.46 8.6.46 8.6.46s6.88 0 8.6-.46a2.78 2.78 0 0 0 1.94-2 29 29 0 0 0 .46-5.25 29
                        29 0 0 0-.46-5.33z"
                      stroke="currentColor"
                      stroke-width="2"
                      stroke-linecap="round"
                      stroke-linejoin="round"/>
                    <polygon points="9.75 15.02 15.5 11.75 9.75 8.48 9.75 15.02" fill="currentColor"/>
                  </svg>
                </a>
              {% endif %}
            </div>
          </div>
        </div>
        <!-- Copyright bar -->
        <div class="footer-bottom">
          <p class="copyright">&copy; {{ site.currentYear or "2026" }}
            {{ site.author }}. Tous droits réservés.</p>
          <div class="footer-legal">
            <a href="{{ '/mentions-legales' | url }}">Mentions légales</a>
            <a href="{{ '/confidentialite' | url }}">Confidentialité</a>
            <a href="{{ '/cookies' | url }}">Cookies</a>
          </div>
        </div>
      </div>
    </footer>
    <!-- Scripts -->
    <script src="{{ '/assets/js/main.js' | url }}" defer></script>
  </body>
</html>